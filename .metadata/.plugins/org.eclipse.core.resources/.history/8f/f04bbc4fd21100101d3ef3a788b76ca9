import crawler.GoldCrawler;
import crawler.OilCrawler;
import driver.AMyDriverContext;
import driver.ChromeDriverContext;

public class Main {
	public static void main(String[] args) {
		AMyDriverContext driverContext = new ChromeDriverContext();
        
        // Instantiate and execute the crawler
        GoldCrawler goldCrawler = new GoldCrawler(driverContext);
        OilCrawler oilCrawler = new OilCrawler(driverContext);
        boolean gold = goldCrawler.crawl();
        boolean oil = oilCrawler.crawl();
        
        // Output the result of the crawling operation
        if (gold && oil) {
            System.out.println("Crawling completed successfully.");
        } else {
            System.out.println("Crawling encountered issues.");
        }
    }
}
